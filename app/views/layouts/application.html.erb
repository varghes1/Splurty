  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="col-xs-3">
			<div class="circle">
				<br />
				My MD
				<br />
				>
				<br />
				Your MD
			</div>
		</div>
		<div class="col-xs-4 slogan">
			Splurting out physician related randomness since forever
		</div>
		<div class="col-xs- links">
			<%= link_to 'Contribute', '#' %>
			<%= link_to 'About', '#' %>
	</header>
	<hr />
	<br class="clear" />
<%= yield %>

</body>
</html>
